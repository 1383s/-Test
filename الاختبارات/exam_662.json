                        },
                        {
                            "id": 58387,
                            "text": "كلاهما يفرز الاوكسينات"
                        },
                        {
                            "id": 58388,
                            "text": "كلاهما متطابقان تماما"
                        }
                    ]
                },
                {
                    "id": 14608,
                    "text": "اي الغدد التالية ذات إفراز خارجي داخل الجسم ؟",
